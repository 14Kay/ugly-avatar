{
    "compilerOptions": {
      "target": "ES2018",
      "module": "CommonJS",
      "rootDir": "./src",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "allowJs": false,
      "checkJs": false,
      "declaration": true,
      "outDir": "dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "exclude": [],
    "include": ["src"]
  }
  
  